<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/posterView"
        android:layout_width="200dp"
        android:layout_height="110dp"
        app:cardBackgroundColor="@color/alto"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/launcherView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/alto"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="@id/posterView"
        app:layout_constraintTop_toBottomOf="@id/posterView" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/nameView"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="@color/alto"
        app:layout_constraintEnd_toEndOf="@id/posterView"
        app:layout_constraintStart_toEndOf="@id/launcherView"
        app:layout_constraintTop_toTopOf="@id/launcherView" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/genreView"
        android:layout_width="80dp"
        android:layout_height="14dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="@color/alto"
        app:layout_constraintStart_toStartOf="@id/nameView"
        app:layout_constraintTop_toBottomOf="@id/nameView" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ratingView"
        android:layout_width="30dp"
        android:layout_height="12dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="@color/alto"
        app:layout_constraintStart_toStartOf="@id/genreView"
        app:layout_constraintTop_toBottomOf="@id/genreView" />

</androidx.constraintlayout.widget.ConstraintLayout>